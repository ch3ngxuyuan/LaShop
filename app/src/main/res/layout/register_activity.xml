<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/tool_bar" />

    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/register_iv_head"
        android:layout_width="220px"
        android:layout_height="220px"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="100px"
        android:src="@drawable/user_head" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10px"
        android:text="添加头像"
        android:textColor="@color/black"
        android:textSize="@dimen/text_16" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="40px"
        android:layout_marginLeft="40px"
        android:layout_marginRight="40px"
        android:layout_marginTop="80px"
        android:orientation="vertical">

        <include layout="@layout/line" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingBottom="30px"
            android:paddingTop="30px">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="账号"
                android:textColor="@color/black"
                android:textSize="@dimen/text_16" />

            <EditText
                android:id="@+id/register_et_phone"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/tran"
                android:gravity="right"
                android:hint="请输入您的手机号"
                android:inputType="number"
                android:textSize="@dimen/text_16" />

        </LinearLayout>

        <include layout="@layout/line" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingBottom="30px"
            android:paddingTop="30px">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="密码"
                android:textColor="@color/black"
                android:textSize="@dimen/text_16" />

            <EditText
                android:id="@+id/register_et_pass"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/tran"
                android:gravity="right"
                android:hint="请输入您的密码"
                android:inputType="textPassword"
                android:textSize="@dimen/text_16" />

        </LinearLayout>

        <include layout="@layout/line" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingBottom="30px"
            android:paddingTop="30px">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="验证码"
                android:textColor="@color/black"
                android:textSize="@dimen/text_16" />

            <EditText
                android:id="@+id/register_et_code"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="20px"
                android:layout_weight="1"
                android:background="@color/tran"
                android:gravity="right"
                android:hint="请输入您的验证码"
                android:inputType="textPassword"
                android:textSize="@dimen/text_16" />

            <TextView
                android:id="@+id/register_tv_send"
                android:layout_width="150px"
                android:layout_height="wrap_content"
                android:background="@drawable/round_btn_blue"
                android:gravity="center"
                android:padding="12px"
                android:text="发送"
                android:textColor="@color/white"
                android:textSize="@dimen/text_16" />

        </LinearLayout>

        <include layout="@layout/line" />

        <TextView
            android:id="@+id/register_tv_complete"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="80px"
            android:background="@drawable/round_btn_blue"
            android:gravity="center"
            android:padding="25px"
            android:text="完成"
            android:textColor="@color/white"
            android:textSize="@dimen/text_16" />

    </LinearLayout>

</LinearLayout>