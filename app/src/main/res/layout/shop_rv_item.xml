<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:paddingBottom="50px"
    android:paddingLeft="20px"
    android:paddingRight="20px"
    android:paddingTop="50px">

    <ImageView
        android:id="@+id/shop_iv_select"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/general_icon_unselect" />

    <ImageView
        android:id="@+id/shop_iv"
        android:layout_width="150px"
        android:layout_height="150px"
        android:layout_marginLeft="20px"
        android:src="@drawable/image" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30px"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/shop_tv_color"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Man,M,Blue"
            android:textColor="@color/black3"
            android:textSize="@dimen/text_16" />

        <TextView
            android:id="@+id/shop_tv_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5px"
            android:text="Blue Oxford Shirt"
            android:textColor="@color/black"
            android:textSize="@dimen/text_18"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/shop_tv_price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5px"
            android:text="$189,99"
            android:textColor="@color/black"
            android:textSize="@dimen/text_18"
            android:textStyle="bold" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20px"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/shop_iv_delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/shop_icon_delete" />

        <com.lala.lashop.widget.RectTextView
            android:id="@+id/shop_tv_count"
            android:layout_width="70px"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="15px"
            android:background="@drawable/circle_border"
            android:gravity="center"
            android:text="x2"
            android:textColor="@color/black2"
            android:textSize="@dimen/text_14" />

    </LinearLayout>

</LinearLayout>